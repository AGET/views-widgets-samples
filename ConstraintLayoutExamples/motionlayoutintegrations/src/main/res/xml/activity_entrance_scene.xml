<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/star_background"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/get_started_background"
            android:layout_width="300dp"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            android:alpha="0"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/get_started_background"
            motion:layout_constraintTop_toTopOf="@id/get_started_background"
            motion:layout_constraintStart_toStartOf="@+id/get_started_background"
            android:alpha="0"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintVertical_bias="0.9" />
    </ConstraintSet>


    <ConstraintSet
        android:id="@+id/pre_bounce"
        motion:deriveConstraintsFrom="@+id/start" />

    <Transition
        motion:duration="50000"
        motion:constraintSetStart="@+id/pre_bounce"
        motion:constraintSetEnd="@+id/start"
        motion:autoTransition="animateToEnd" >

        <!-- Use this click listener to jump out of this transition and into the start->end transition -->
        <OnClick
            motion:targetId="@+id/get_started_background"
            motion:clickAction="jumpToEnd" />
        <KeyFrameSet >

        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="1000"
        motion:autoTransition="animateToEnd"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end" >
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/get_started_background"
                motion:framePosition="32"
                android:alpha="0" />

            <KeyPosition
                motion:motionTarget="@+id/get_started_background"
                motion:framePosition="40"
                motion:percentX="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/get_started"
                motion:framePosition="10"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="1000"
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/pre_bounce" >
        <OnClick />
    </Transition>
</MotionScene>